<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Calculator.ViewModel"
        Title="Calculator"
        Height="450"
        Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <local:CalculatorViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display area for the result -->
        <TextBlock Name="DisplayText" 
                   Grid.Row="0" 
                   FontSize="36" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center"
                   Text="{Binding Display}" 
                   Padding="10"/>

        <!-- Buttons for calculator operations -->
        <UniformGrid Grid.Row="1" Columns="4" Rows="5">
            <!-- Memory Buttons -->
            <Button Content="MC" FontSize="20" Command="{Binding ClearCommand}"/>
            <Button Content="MR" FontSize="20"/>
            <Button Content="M+" FontSize="20"/>
            <Button Content="M-" FontSize="20"/>

            <!-- Calculator Operations -->
            <Button Content="%" FontSize="20" Command="{Binding ModulusCommand}"/>
            <Button Content="CE" FontSize="20"/>
            <Button Content="C" FontSize="20"/>
            <Button Content="Backspace" FontSize="20"/>

            <Button Content="1/x" FontSize="20" Command="{Binding InverseCommand}"/>
            <Button Content="x²" FontSize="20" Command="{Binding SquareCommand}"/>
            <Button Content="√x" FontSize="20" Command="{Binding SquareRootCommand}"/>
            <Button Content="/" FontSize="20" Command="{Binding DivideCommand}"/>

            <Button Content="7" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="8" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="9" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="*" FontSize="20" Command="{Binding MultiplyCommand}" />

            <Button Content="4" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="5" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="6" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="-" FontSize="20" Command="{Binding SubtractCommand}" />

            <Button Content="1" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="2" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="3" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="+" FontSize="20" Command="{Binding AddCommand}" />

            <Button Content="+/-" FontSize="20" Command="{Binding NegateCommand}" />
            <Button Content="0" FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="," FontSize="20" Command="{Binding AddCommand}" />
            <Button Content="=" FontSize="20" Command="{Binding AddCommand}" />
        </UniformGrid>
    </Grid>
</Window>
