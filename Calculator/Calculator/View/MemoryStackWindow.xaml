<Window x:Class="Calculator.View.MemoryStackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.View"
        mc:Ignorable="d"
        Title="Memory Stack"
        Height="300"
        Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <ListBox Name="MemoryStackListBox" FontSize="16" Margin="10,40,10,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Close" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Click="CloseButton_Click"/>
    </Grid>
</Window>
